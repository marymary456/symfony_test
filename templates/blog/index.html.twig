{% extends 'home/layout.html.twig' %}

{% block title %}{{ blog }}{% endblock %}
{% block stylesheet  %}<link href="{{ asset('css/blog.css') }}" rel="stylesheet"/>{% endblock %}
{% block content %}

    <!-- Blog Entries Column -->
    <div class="col-md-8">

    <h1 class="my-4">{{ blog }}
        <small></small>
    </h1>
        <!-- Blog Post -->
    {% for post in posts %}
    <div class="card mb-4">
        <img class="card-img-top" src="http://placehold.it/750x300" alt="Card image cap">
        <div class="card-body">
            <h2 class="card-title"><a href="{{ path('get_post', {'postId': post.id}) }}">{{ post.title}}</a></h2>
            <p class="card-text">{{ post.content}}</p>
            <a href="{{ path('get_post', {'postId': post.id}) }}" class="btn btn-primary">Read More &rarr;</a>
        </div>
        <div class="card-footer text-muted">
            {{ post.createdAt | date("F jS \\a\\t g:ia") }} by
            <a href="{{ path('blog_path', {'id': post.blog.id}) }}">{{ post.blog.user.username }}</a>
        </div>
    </div>
    {% endfor %}



    <!-- Pagination -->
    <ul class="pagination justify-content-center mb-4">
        <li class="page-item">
            <a class="page-link" href="#">&larr; Older</a>
        </li>
        <li class="page-item disabled">
            <a class="page-link" href="#">Newer &rarr;</a>
        </li>
    </ul>
    </div>

{% endblock %}