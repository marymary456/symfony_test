        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>{{ blog }}âœ…</h1>

        <h3>Posts</h3>
        <ul>
            {% for post in posts %}
                <h4><a href="{{ path('get_post', {'postId': post.id}) }}">{{ post.title}}</a></h4>
                <p>{{ post.createdAt | date("F jS \\a\\t g:ia") }}</p>
                <p>{{ post.content}}</p>
            {% endfor %}
        </ul>
    </div>

{% endblock %}