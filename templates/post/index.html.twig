
{% extends 'home/layout.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

 {% block content %}
     <!-- Post Content Column -->
     <div class="col-lg-8">

     <!-- Title -->
     <h1 class="mt-4">{{post.title }}</h1>

     <!-- Author -->
     <p class="lead">
         by
         <a href="{{ path('blog_path', {'id': post.blog.id}) }}">{{ post.blog.user.username }}</a>
     </p>

     <hr>

     <!-- Date/Time -->
     <p>{{ post.createdAt | date("F jS \\a\\t g:ia") }}</p>

     <hr>

     <!-- Preview Image -->
     <img class="img-fluid rounded" src="http://placehold.it/900x300" alt="">

     <hr>

     <!-- Post Content -->
    <p>{{ post.content | raw}}</p>
     <hr>

     <!-- Comments Form -->
     <div class="card my-4">
         <h5 class="card-header">Leave a Comment:</h5>
         <div class="card-body">
             {{ form_start(form) }}
             {{ form_errors(form) }}
             <div class="form-group">
             {{ form_row(form.comment) }}
             </div>
             {{ form_row(form.submit) }}
             {{ form_end(form) }}
         </div>
     </div>

     <!-- Single Comment -->
     {% for comment in comments %}
     <div class="media mb-4">
         <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
         <div class="media-body">
             <p>{{ comment.createAt | date("F jS \\a\\t g:ia") }}</p>
             <p class="text-info">{{ comment.comment }}</p>
         </div>
     </div>
     {% endfor %}

     </div>

{% endblock %}